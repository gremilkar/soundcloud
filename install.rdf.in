#filter substitution
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#"
     xmlns:songbird="http://www.songbirdnest.com/2007/addon-metadata-rdf#">

  <Description about="urn:mozilla:install-manifest">

    <!-- Songbird target application. -->
    <em:targetApplication>
      <Description>
        <em:id>songbird@songbirdnest.com</em:id>
        <em:minVersion>@EXTENSION_MIN_VER@</em:minVersion>
        <em:maxVersion>@EXTENSION_MAX_VER@</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- Nightingale target application. -->
    <em:targetApplication>
      <Description>
        <em:id>nightingale@getnightingale.com</em:id>
        <em:minVersion>@EXTENSION_MIN_VER@</em:minVersion>
        <em:maxVersion>@EXTENSION_MAX_VER@</em:maxVersion>
      </Description>
    </em:targetApplication>

    <em:id>@EXTENSION_UUID@</em:id>
    <em:type>2</em:type>
    <em:version>@EXTENSION_VER@</em:version>
    <em:name>SoundCloud</em:name>
    <em:creator>Kurt Ruppel (kurt@songbirdnest.com)</em:creator>
    <em:description>Songbird + SoundCloud integration.</em:description>

    <em:iconURL>chrome://soundcloud/skin/em-icon.png</em:iconURL>

    <songbird:displayPane>
      <Description>
        <songbird:contentUrl>chrome://soundcloud/content/waveform.html</songbird:contentUrl>
        <songbird:contentTitle>Waveform</songbird:contentTitle>
        <songbird:contentIcon>chrome://soundcloud/skin/source.png</songbird:contentIcon>
        <songbird:defaultWidth>177</songbird:defaultWidth>
        <songbird:defaultHeight>120</songbird:defaultHeight>
        <songbird:suggestedContentGroups>contentpane</songbird:suggestedContentGroups>
        <songbird:showOnInstall>true</songbird:showOnInstall>
      </Description>
    </songbird:displayPane>

  </Description>
</RDF>

